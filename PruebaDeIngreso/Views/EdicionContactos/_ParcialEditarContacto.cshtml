
@model Entidades.GenericModel

@{ Layout = null;}

@{
    if (Model.IdReserva == 0)
    {
        <hr />
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>No se encontraron resultados para los parámetros de búsqueda.</strong>
        </div>
    }
    else
    {
        <hr />
        <div class="alert alert-info alert-dismissible">
            <strong>Editar Datos de Contacto y Pasajeros</strong>
        </div>
        using (Html.BeginForm("modificarContacto", "EdicionContactos", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-3 font-weight-bold">
                    @Html.Label("Reserva:")
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.IdReserva)
                </div>
                <div class="col-md-3 font-weight-bold" >
                    @Html.Label("Fecha de Ida:")
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.fechaIda)
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 font-weight-bold">
                    @Html.Label("Nombre del contacto:")
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.nombreContacto)
                </div>
                <div class="col-md-3 font-weight-bold">
                    @Html.Label("Cédula del contacto:")
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cedulaContacto)
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 font-weight-bold">
                    @Html.Label("Télefono del contacto:")
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.telefonoContacto)
                </div>
                <div class="col-md-3 font-weight-bold">
                    @Html.Label("Email del contacto:")
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.emailContacto)
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <input type="submit" value="Modificar" class="btn btn-success" id="btnGuardar" />
                </div>
                <div class="col-md-4"></div>
            </div>
        }
    }
}